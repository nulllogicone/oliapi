@model OliApi.Models.OliIndexModel

<div class="jumbotron">
    <br/>
    <h1>OLI-it API</h1>
    <p class="lead">
        Intelligent message matching and delivering system.
    </p>
    <p><a href="http://www.oli-it.com" class="btn btn-primary btn-lg">www.oli-it.com &raquo;</a>
    </p>
</div>
<div class="row">
    <h2>OLIs</h2>
    <div class="col-md-6">
        <h3>PostIt</h3>
        <h4>Die Nachrichten</h4>
        <ul class="list-group">
            @foreach (var p in Model.PostIts)
            {
                <li class="list-group-item">@p.Titel</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>TopLab</h3>
        <h4>Die Antworten.</h4>
        <ul class="list-group">
            @foreach (var t in Model.TopLabs)
            {
                <li class="list-group-item">@t.Titel</li>
            }
        </ul>
    </div>
</div>

<h3>Swagger</h3>

<a href="http://oliapi.azurewebsites.net/swagger/docs/v1">http://oliapi.azurewebsites.net/swagger/docs/v1</a>

<br/>

